<%= form_with model: @idea, local: true do |f| %>
  <% if @idea.errors.any? %>
    <%= @idea.errors.full_messages.join(', ') %>
  <% end %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <%= f.submit %>
<% end %>
